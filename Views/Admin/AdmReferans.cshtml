@using MyProject.Models.Sinif
@model List<Referanslar> 
@{
    ViewBag.Title = "AdmReferans";
    Layout = "~/Views/Shared/Admin_Layaout.cshtml";
}

<div style="width:100%" ; class="col-md-12 table table-hover">
    <h3>Referanslar (Ana Sayfa)</h3>
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Resim</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.id</td>
                <td><img src="@x.Resim" style="align-items:center;" width="130px;" /></td>
                <td><a href="~/Admin/AdmRefSil/@x.id" onclick="return confirm('Bunu Silmek İstediginizden Emin misin? @x.Resim')" class="button border with-icon" style="background-color:#ff0000; color:#fff">Sil</a></td>

                <td><a href="~/Admin/AdmRefGetr/@x.id" class="button border with-icon">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/Admin/AdmRefEkle/" class="button border with-icon">Yeni Referans Ekle</a>

</div>
