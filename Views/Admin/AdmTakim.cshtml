@using MyProject.Models.Sinif
@model List<Takim> 
@{
    ViewBag.Title = "AdmTakim";
    Layout = "~/Views/Shared/Admin_Layaout.cshtml";
}

<div style="width:100%" ; class="col-md-12 table table-hover">
    <h3>Takım</h3>
    <table class="table table-bordered">
        <tr>
            <th>Ad Soyad</th>
            <th>Meslek</th>
            <th>Resim</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.AdSoyad</td>
                <td>@x.Meslek</td>
                <td><img src="@x.Resim" width="50px;" /></td>
                <td><a href="~/Admin/AdmTakimsil/@x.id" onclick="return confirm('Bunu Silmek İstediginizden Emin misin? @x.AdSoyad  @x.Meslek ')" class="button border with-icon" style="background-color:#ff0000; color:#fff">Sil</a></td>
                <td><a href="~/Admin/AdmTakGetr/@x.id" class="button border with-icon">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/Admin/AdmTakimEkle/" class="button border with-icon">Yeni Takım Arkadaşı Ekle</a>

</div>
