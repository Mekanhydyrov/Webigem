@using MyProject.Models.Sinif
@model List<SSS>
@{
    ViewBag.Title = "AdminSSS";
    Layout = "~/Views/Shared/Admin_Layaout.cshtml";
}

<div style="width:100%" ; class="col-md-12 table table-hover">
    <h3>Sıkça Sorulan Sorular</h3>
    <table class="table table-bordered">
        <tr>
            <th>Başlık</th>
            <th>İçerik</th>
            @*<th>Resim</th>*@
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Baslik</td>
                <td>@x.icerik</td>
                @*<td>@x.Resim</td>*@
                <td><a href="~/Admin/AdminSSSSil/@x.id" onclick="return confirm('Bunu Silmek İstediginizden Emin misin? @x.Baslik')" class="button border with-icon" style="background-color:#ff0000; color:#fff">Sil</a></td>
                <td><a href="~/Admin/AdminSSSGetr/@x.id" class="button border with-icon">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/Admin/AdminSSSEkle/" class="button border with-icon">Yeni Bir Cevap Ekle</a>

</div>
