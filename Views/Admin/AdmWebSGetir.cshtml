@model MyProject.Models.Sinif.WebSiteTanitma
@{
    ViewBag.Title = "AdmWebSGetir";
    Layout = "~/Views/Shared/Admin_Layaout.cshtml";
}

<h3>Web Site Tanıtma Sayfasını Güncelle (Ana Sayfa Kategorilerin Altında) </h3>

@using (Html.BeginForm("AdmWebSGuncelle", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div id="div-boyut">

        <div>
            <label><b>Başlık</b></label>
            @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
        </div>
        <div>
            <label><b>Uzun Yazı</b></label>
            @Html.TextAreaFor(x => x.UzunYazi, 4, 0, new { @class = "form-control" })
        </div>

        <div>
            <label><b>Yazı 3</b></label>
            @Html.TextAreaFor(x => x.Yazi3, 3, 0, new { @class = "form-control" })
        </div>
        <div>
            <label><b>Resim</b></label>
            @*<input type="text" name="Resim" placeholder="Url Giriniz" class="form-control" />*@

            <input type="file" name="Resim" />
        </div>
        <div>
            @Html.HiddenFor(x => x.id)
        </div>
        <div>
            <button class="button border with-icon">Değişiklikleri Kaydet</button>
            <br />
            <br />
        </div>
    </div>


}

