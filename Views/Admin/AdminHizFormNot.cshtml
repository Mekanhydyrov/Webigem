@using MyProject.Models.Sinif
@model List<HizmetForm>
@{
    ViewBag.Title = "AdminHizFormNot";
    Layout = "~/Views/Shared/Admin_Layaout.cshtml";
}

<!DOCTYPE html>
<html>
<head>

</head>

<body>
    @using (Html.BeginForm("AdminHizFormNot", "Admin", FormMethod.Post))
    {
        <div class="col-md-12" style="float:left; margin-bottom:-30px;">
            <div class="col-md-6">
                <input type="text" name="p" placeholder="Teleon no: ile arama yapın..." />

            </div>
            <div class="col-md-6">
                <input type="submit" class="button border with-icon" value="Aramaya Başlayın..." />

            </div>

        </div>
        @*@Html.TextBox("p")*@

    }
    <br />
    <br />
    <br />
    <br />
    <br />
    <!-- Listings -->
    <div class="col-lg-12 col-md-12">
        <div class="dashboard-list-box margin-top-0">
            <h4>Müşteri Talepleri</h4>
            @foreach (var x in Model)
            {
                <ul>

                    <li>

                        <div class="list-box-listing">
                            <div class="list-box-listing-img"><a href="~/Admin/AdminHizFormNotDetay/@x.id"><img src="~/Resimler/wesigo/Yeni/1920x1060hakkımızdabinayesil.jpg" alt=""></a></div>

                            <div class="list-box-listing-content">
                                <div class="inner">
                                    @*<p>Not: </p>
                                        <div class="numerical-rating" data-rating="@ViewBag.notsay"></div>*@

                                    <h3><a href="~/Admin/AdminHizFormNotDetay/@x.id">Ad Soyad: @x.AdSoyad</a></h3>
                                    <h3><a href="~/Admin/AdminHizFormNotDetay/@x.id">Proje Başlığı: @x.ProjeBaslik</a></h3>
                                    <p><span style="font-weight:bold" ;>Referans No:</span>  @x.TakipKodu</p>
                                    <p style="margin-top:-20px;"><span style="font-weight:bold" ;>Telefon No:</span>  @x.TelNo</p>
                                    <p style="margin-top:-20px;"><span style="font-weight:bold" ;>Tarih :</span> @Convert.ToDateTime(x.Tarih).ToString("dd/MMM/yyyy")</p>


                                </div>
                            </div>


                        </div>

                    </li>

                </ul>
            }
            <div class="clearfix"></div>
        </div>
    </div>

    <div id="backtotop"><a href="#"></a></div>

</body>

</html>

