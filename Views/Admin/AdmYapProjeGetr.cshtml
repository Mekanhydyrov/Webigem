@model MyProject.Models.Sinif.YapilanPSayisi
@{
    ViewBag.Title = "AdmYapProjeGetr";
    Layout = "~/Views/Shared/Admin_Layaout.cshtml";
}

<h3>Yapılan Projeler Sayfasını Güncelle (Ana Sayfa)</h3>

@using (Html.BeginForm("AdmYapProjeGuncelle", "Admin", FormMethod.Post))
{
    <div id="div-boyut">
        <label><b>Başlık</b></label>
        @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
    </div>
    <div>
        <label><b>Sayı</b></label>
        @Html.TextBoxFor(x => x.sayi, new { @class = "form-control" })

    </div>

    <div>
        @Html.HiddenFor(x => x.id)
    </div>
    <div>
        <button class="button border with-icon">Değişiklikleri Kaydet</button>
        <br />
        <br />
    </div>


}
