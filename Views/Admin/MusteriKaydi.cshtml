@using MyProject.Models.Sinif
@model List<Musteriler>
@{
    ViewBag.Title = "MusteriKaydi";
    Layout = "~/Views/Shared/Admin_Layaout.cshtml";
}

<div style="width:100%" ; class="col-md-12 table table-hover">
    <h3>Müşteri Kaydı</h3>
    <table class="table table-bordered">
        <tr>
            <th>Müşteri Ad Soyad</th>
            <th>E-Posta</th>
            <th>Adres</th>
            <th>Telefon</th>
            <th>İl</th>
            <th>İlçe</th>
            @*<th>Sil</th>
                <th>Güncelle</th>*@
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.MusteriAdSoyad</td>
                <td>@x.EPosta</td>
                <td>@x.Adres</td>
                <td>@x.Telefon</td>
                <td>@x.il</td>
                <td>@x.ilce</td>
                @*<td>@x.Resim</td>*@
                @*<td><a href="~/Admin/AdminKSil/@x.id" class="button border with-icon" onclick="return confirm('Bunu Silmek İstediginizden Emin misin? @x.KategoriAd ')" style="background-color:#ff0000; color:#fff">Sil</a></td>
                    <td><a href="~/Admin/AdminKGetir/@x.id" class="button border with-icon">Güncelle</a></td>*@
            </tr>
        }
    </table>
    @*<a href="/Admin/AdminKEkle/" class="button border with-icon">Yeni Kategori Ekle</a>*@

</div>

