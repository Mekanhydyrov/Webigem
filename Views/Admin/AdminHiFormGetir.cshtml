@model MyProject.Models.Sinif.HizmetForm
@{
    ViewBag.Title = "AdminHiFormGetir";
    Layout = "~/Views/Shared/Admin_Layaout.cshtml";
}

<h3>Müşteri Talep Formu Güncelle</h3>

@using (Html.BeginForm("AdmHizFormGuncel", "Admin", FormMethod.Post))
{
    <div id="yazdir">
        <div @*id="div-boyut"*@>
            <label><b>Ad Soyad</b></label>
            @Html.TextBoxFor(x => x.AdSoyad, new { @class = "form-control" })
        </div>
        <div>
            <label><b>E-Posta</b></label>
            @Html.TextBoxFor(x => x.EPosta, new { @class = "form-control" })
        </div>
        <div>
            <label><b>Tel No</b></label>
            @Html.TextBoxFor(x => x.TelNo, new { @class = "form-control" })
        </div>
        <div>
            <label><b>Proje Başlıgı</b></label>
            @Html.TextBoxFor(x => x.ProjeBaslik, new { @class = "form-control" })
        </div>


        @*<label><b>Kategori</b></label>
            @Html.DropDownListFor(x => x.Kategoriid, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })*@

        <label><b>Hizmet</b></label>
        @Html.DropDownListFor(x => x.Hizmetid, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })

        <div>
            <label><b>Mesaj</b></label>
            @Html.TextAreaFor(x => x.ileti, 4, 0, new { @class = "form-control" })
        </div>
    </div>
    <div>
        @Html.HiddenFor(x => x.id)
    </div>
    <div>
        <button class="button border with-icon">Değişiklikleri Kaydet</button>
        <a href="javascript:;" onclick="printDiv('yazdir')" style="float:right;" class="btn btn-danger">PDF AL</a>
        <br />
        <br />
    </div>



}



<script>
    function printDiv(divName) {
        var printContents = document.getElementById(divName).innerHTML;
        var originalContents = document.body.innerHTML;
        document.body.innerHTML = printContents;
        window.print();
        document.body.innerHTML = originalContents;
    }
</script>
