@using MyProject.Models.Sinif
@model List<iletisimMesaj>
@{
    ViewBag.Title = "AdmiletsmGMesaj";
    Layout = "~/Views/Shared/Admin_Layaout.cshtml";
}

@using (Html.BeginForm("AdmiletsmGMesaj", "Admin", FormMethod.Post))
{
    <div class="col-md-12" style="float:left">
        <div class="col-md-6">
            <input type="text" name="p" placeholder="E Posta İle Arama Yap..." class="form-control" />

        </div>
        <div class="col-md-6">
            <input type="submit" class="button border with-icon" value="Ara..." />

        </div>

    </div>
    @*@Html.TextBox("p")*@

}

<div style="width:100%" ; class="col-md-12 table table-hover">
    <h3>İletişim Mesaj</h3>
    <table class="table table-bordered">
        <tr>
            <th>Ad Soyad</th>
            <th>E-Posta</th>
            <th>Konu</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.AdSoyad</td>
                <td>@x.EPosta</td>
                <td>@x.Konu</td>
                @*<td>@x.Resim</td>*@
                <td><a href="~/Admin/AdmMesjSil/@x.id" onclick="return confirm('Bunu Silmek İstediginizden Emin misin? @x.AdSoyad ')" class="button border with-icon" style="background-color:#ff0000; color:#fff">Sil</a></td>

                <td><a href="~/Admin/AdmMesjGetr/@x.id" class="button border with-icon">Güncelle (Detaylı Gör)</a></td>
            </tr>
        }
    </table>

</div>
