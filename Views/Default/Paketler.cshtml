<body>
    <div class="inner-banner inner-bg1">
        <div class="container">
            <div class="inner-title text-center">
                <h3>Paketler</h3>
                <ul>
                    <li>
                        <a href="/">Ana Sayfa</a>
                    </li>
                    <li>
                        <i class='bx bxs-chevrons-right'></i>
                    </li>
                    <li>Paketler</li>
                </ul>
            </div>
        </div>
    </div>


    <div class="price-area pt-100 pb-70">
        <div class="container">
            <div class="section-title text-center">
                <span>Paketler</span>
                <h2>
                    Planlarımızı ve Paketlerimizi Satın Alın
                </h2>
                <p>
                    Bir okuyucunun, sayfa düzenine bakarken
                    sayfanın okunabilir içeriği tarafından
                    dikkatinin dağılacağı uzun süredir bilinen bir gerçektir.
                </p>
            </div>



            <div class="row pt-45">
                @foreach (var x in Model)
                {

                    <div class="col-lg-4 col-sm-6">
                        <div class="single-price">
                            <span>Standart</span>
                            <div class="single-price-title">
                                <h2><sup>₺</sup>@x.Fiyat@*<sub>/month</sub>*@</h2>
                            </div>
                            <ul>
                                <li>@Html.Raw(x.Maddeler1)</li>
                                @*<li>@x.Maddeler2</li>
                                <li>@x.Maddeler3</li>
                                <li>@x.Maddeler4</li>
                                <li class="color-gray">@x.Maddeler6</li>
                                <li class="color-gray">@x.Maddeler7</li>
                                <li class="color-gray">@x.Maddeler8</li>*@
                            </ul>
                            <a href="/Default/FormSayfasi" class="get-btn">Paket Seç</a>
                        </div>
                    </div>

                    if (x.Fiyat == x.Fiyat && x.id == 7)
                    {
                        <div class="col-lg-4 col-sm-6">
                            <div class="single-price current">
                                <span>Çok Satılan</span>
                                <div class="single-price-title">
                                    <h2><sup>₺</sup>@x.Fiyat<sub>/Yıllık</sub></h2>
                                </div>
                                <ul>
                                    <li>@Html.Raw(x.Maddeler1)</li>
                                    @*<li>@x.Maddeler2</li>
                                    <li>@x.Maddeler3</li>
                                    <li>@x.Maddeler4</li>
                                    <li class="color-gray">@x.Maddeler6</li>
                                    <li class="color-gray">@x.Maddeler7</li>
                                    <li class="color-gray">@x.Maddeler8</li>*@
                                </ul>
                                <a href="/Default/FormSayfasi" class="get-btn">Paket Seç</a>
                            </div>
                        </div>
                    }


                }
            </div>

        </div>
    </div>





