<body>


    <div class="inner-banner inner-bg1">
        <div class="container">
            <div class="inner-title text-center">
                <h3>Hakkımızda</h3>
                <ul>
                    <li>
                        <a href="/">Ana Sayfa</a>
                    </li>
                    <li>
                        <i class='bx bxs-chevrons-right'></i>
                    </li>
                    <li>Hakkımızda</li>
                </ul>
            </div>
        </div>
    </div>


    <div class="about-area about-max pt-100 pb-70">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-lg-5 col-xxl-6">
                    <div class="about-img about-ml">
                        <img src="~/Content/WebigemDesign/main/default/assets/img/about/3.jpg" alt="About Images">
                    </div>
                </div>
                @foreach (var x in Model)
                {
                    <div class="col-lg-7 col-xxl-6">
                        <div class="about-content about-width">
                            <span>Hakkımızda</span>
                            <h2>@x.Baslik</h2>
                            <p>
                                @x.Kisaicerik
                            </p>
                            <p>
                                @x.HakkimizdaAltParametreBaslik
                            </p>
                            <div class="about-btn">
                                <a href="/Default/Tumhizmetler" class="default-btn">Hizmetlerimize Göz Atın</a>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>





    <div class="counter-area pt-100 pb-70">
        <div class="container">
            <div class="row">
                @Html.Action("TammlananPSayisi", "Default")

            </div>
        </div>
    </div>


    <div class="client-area pt-100 pb-70">
        <div class="container-fluid p-0">
            <div class="section-title text-center">
                <span>Referans</span>
                <h2>Müşterilerimizin Görüşleri</h2>
                <p>
                    Bir okuyucunun, sayfa düzenine bakarken sayfanın okunabilir
                    içeriği tarafından dikkatinin dağılacağı uzun süredir bilinen bir gerçektir.
                </p>
            </div>
            <div class="client-slider owl-carousel owl-theme">
                @Html.Action("MMusteriYorumu", "Default")

            </div>
        </div>
    </div>


