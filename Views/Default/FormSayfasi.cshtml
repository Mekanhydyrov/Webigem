    <br />

    <section class="contact-section pb-100">
        <div class="container">
            <div class="section-title text-center">
                <h2>Talebinizi Oluşturun</h2>
                <p>
                    Değerli müşterimiz aşağıdaki formu doldurarak talebinizi oluşturup bize iletebilirsiniz.

                </p>
            </div>
            <div class="contact-wrap pt-45">
                <div class="contact-wrap-form">
                    @using (Html.BeginForm("FormSayfasi", "Default", FormMethod.Post))
                    {
                        <form id="contactForm">
                            <div class="row">
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="col-lg-6 col-sm-6">
                                    <div class="form-group">
                                        @Html.TextBoxFor(x => x.AdSoyad, new { @class = "form-control", placeholder = "Ad Soyadınız!!!", required = "" })
                                        @Html.ValidationMessageFor(x => x.AdSoyad, "", new { @style = "color:red" })
                                        @*<input type="text" name="name" id="name" class="form-control" required data-error="Please enter your name" placeholder="Your Name">*@
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-sm-6">
                                    <div class="form-group">
                                        @Html.TextBoxFor(x => x.EPosta, new { @class = "form-control", type = "email", placeholder = "E Posta Adresiniz!!!", required = "" })
                                        @Html.ValidationMessageFor(x => x.EPosta, "", new { @style = "color:red" })
                                        @*<input type="email" name="email" id="email" class="form-control" required data-error="Please enter your email" placeholder="Your Email">*@
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-sm-6">
                                    <div class="form-group">
                                        @Html.TextBoxFor(x => x.TelNo, new { @class = "form-control", type = "tel", placeholder = "Telefon No!!!", required = "" })
                                        @Html.ValidationMessageFor(x => x.TelNo, "", new { @style = "color:red" })
                                        @*<input type="tel" name="phone_number" id="phone_number" required data-error="Please enter your number" class="form-control" placeholder="Your Phone">*@
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                                <input class="form-control" type="text" name="TakipKodu" readonly hidden="hidden" value="@ViewBag.takipkod">

                                <div class="col-lg-6 col-sm-6">
                                    <div class="form-group">
                                        @Html.TextBoxFor(x => x.ProjeBaslik, new { @class = "form-control", placeholder = "Proje Başlığı!!!", required = "" })
                                        @Html.ValidationMessageFor(x => x.ProjeBaslik, "", new { @style = "color:red" })
                                        @*<input type="text" name="msg_subject" id="msg_subject" class="form-control" required data-error="Please enter your subject" placeholder="Your Subject">*@
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12">
                                    <div class="form-group">
                                        @*@Html.DropDownListFor(x => x.Hizmetid, (List<SelectListItem>)ViewBag.dgr2, "Hizmet Seçiniz", new { @style = "form-control" })*@
                                        @Html.DropDownListFor(x => x.Hizmetid, (List<SelectListItem>)ViewBag.dgr2, "Hizmet Seçiniz", new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12">
                                    <div class="form-group">
                                        @Html.TextAreaFor(x => x.ileti, new { @class = "form-control", cols = "30", rows = "8", placeholder = "Mesajınız", required = "" })
                                        @Html.ValidationMessageFor(x => x.ileti, "", new { @style = "color:red" })
@*<textarea name="ileti" class="form-control" id="ileti" cols="30" rows="8" required data-error="Mesajı Boş Bırakmayın" placeholder="Mesajınız"></textarea>*@
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 text-center">
                                    <button type="submit" class="default-btn page-btn text-center">
                                        Mesaj Gönder
                                    </button>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </section>

</body>

</html>

